{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",

    "module": "commonjs",
    "target": "esnext",

    "lib": ["esnext"],
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,


    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": true,

    "skipLibCheck": true
  }
}
